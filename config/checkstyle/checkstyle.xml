<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
  "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
  "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Limit line length to 120 characters -->
    <module name="LineLength">
      <property name="max" value="120"/>
    </module>

    <module name="TreeWalker">

    <!-- Skip Javadoc enforcement for now; Javadoc has historically caused
         configuration incompatibilities across Checkstyle versions. -->

    <!-- Prevent star imports -->
    <module name="AvoidStarImport"/>

    <!-- Ensure the code has minimal complexity in method length -->
    <module name="MethodLength">
      <property name="max" value="200"/>
    </module>

    <!-- Discourage empty catch blocks -->
    <module name="EmptyCatchBlock"/>

  </module>
</module>
